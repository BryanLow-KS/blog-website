<%- include("partials/header") -%>
<h1>Compose</h1>

  <form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="postTitle">Title</label>
    <!-- include for id, so that can click on label to toggle input -->
    <input type="text" class="form-control" id="postTitle" name="postTitle" autocomplete="off">
    <!-- off suggestions -->
    <!-- form control for the appearance of the input box -->
  </div>
  <div class="form-group">
    <label for="postBody">Post</label> <br />
    <textarea class="form-control" id="postBody" name="postBody" rows="5" cols="80"></textarea>
    <!-- textarea, for multi-line  input -->
  </div>

  <button type="submit" class="btn btn-primary">Publish</button>

</form>

<%- include("partials/footer") -%>
